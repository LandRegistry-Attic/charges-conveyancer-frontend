{{#show_error_msg}}
    <p>
        Invalid title number!
    </p>
{{/show_error_msg}}

<form method="post">
    <label for="title_number">Title number
        <input type="text" id="title_number" name="title_number">
    </label>

    <input type="submit"
           name="search-property"
           id="search-property"
           value="Search"
           class="button"/>

</form>

<p>
{{#property}}
    <ul>
        <b>
            <li>Title number {{property.title_number}}</li>
            <li>{{property.street}}</li>
        </b>
        {{#property.extended}}
            <li>{{property.extended}}</li>
        {{/property.extended}}
        <li>{{property.locality}}</li>
        <li>{{property.postcode}}</li>
    </ul>

    <form method="post" action="{{add_property_url}}">
        <input type="hidden" name="title_number" value={{property_title_number}}>
        <input type="hidden" name="street" value={{property_street}}>
        <input type="hidden" name="extended" value={{property_extended}}>
        <input type="hidden" name="locality" value={{property_locality}}>
        <input type="hidden" name="postcode" value={{property_postcode}}>
        <input type="submit"
               name="add-property"
               id="add-property"
               value="Select this property"
               class="button"/>
    </form>

{{/property}}
</p>

<p>
    <a href="{{case_details_url}}">Back</a>
</p>